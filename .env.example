# Analytics Configuration
# Copy this file to .env.local and update with your actual values

# Google Analytics 4 Measurement ID
REACT_APP_GA_ID=G-XXXXXXXXXX

# Hotjar Site ID (for heatmap tracking)
REACT_APP_HOTJAR_ID=1234567

# Enable/disable analytics features
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_HEATMAPS=true
REACT_APP_ENABLE_AB_TESTING=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# Debug mode (shows console logs in development)
REACT_APP_ANALYTICS_DEBUG=true